{% extends 'base.html.twig' %}

{% block importmap %}
{{ importmap(['app', 'image-modal']) }}
{% endblock %}

{% block title %}Explore — Resume.cv{% endblock %}

{% block meta_description %}Explorez les derniers posts et projets de la communauté Resume.cv. Découvrez des CV
créatifs, des projets professionnels et connectez-vous avec des talents.{% endblock %}

{% block og_title %}Explore — Resume.cv{% endblock %}

{% block og_description %}Explorez les derniers posts et projets de la communauté Resume.cv. Découvrez des CV créatifs,
des projets professionnels et connectez-vous avec des talents.{% endblock %}

{% block main %}

{% include "_components/sidebar.html.twig" %}

<div class="main-content">
  {% include "_components/headers/header-explore.html.twig" %}

  <section class="section-explore">
    <div class="front-grid">

      {% include "/explore/_components/post-card-news.html.twig" %}

      {% for post in posts %}
      {% include "/explore/_components/post-card.html.twig" with {'post': post} %}
      {% endfor %}

    </div>

    {% include "_components/pagination.html.twig" %}
  </section>

  {% include "_components/footer.html.twig" %}
</div>

{% endblock %}