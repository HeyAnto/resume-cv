{% extends 'base.html.twig' %}

{% block title %}Login â€” Resume.cv{% endblock %}

{% block main %}
{% include "_components/sidebar.html.twig" %}
<div class="main-content ">
    {% include "_components/headers/header-connection.html.twig" %}

    <section class="section-connection">
        <div class="container">
            <form method="post">

                <div>
                    <h1 class="text-h1">Welcome back!</h1>
                    <p class="text-16 text-color-tertiary">Please sign-in to continue</p>
                </div>

                <div class="illustration">
                    <img src="{{ asset('images/img-hannah-lee.webp') }}" alt="Creative Illustration">
                    <p class="text-16 text-color-tertiary">Hannah Lee</p>
                </div>

                <div class="form-group">
                    <label class="text-16 text-color-tertiary" for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email"
                        placeholder="Email" required autofocus pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$">
                </div>

                <div class="form-group">
                    <label class="text-16 text-color-tertiary" for="password">Password</label>
                    <input type="password" name="_password" id="password" placeholder="Password"
                        autocomplete="current-password" required minlength="8">
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                        value="{{ csrf_token('authenticate') }}">
                </div>

                <div class="form-group check">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label class="text-16 text-color-tertiary" for="_remember_me">Remember me</label>
                </div>

                <div class="footer">
                    <button class="btn btn-primary-xs" type="submit">
                        Sign-in
                    </button>
                    <p class="text-16 text-color-tertiary text-center">Forgot your password?
                        <a class="link text-16 text-color-tertiary" href="{{ path('app_forgot_password_request') }}">
                            Reset it here
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </section>
</div>

{% endblock %}