<div class="post-card">
  <div class="profile-container">
    <a href="{{ path('app_profile', {'username': post.user.profile.username}) }}" class="profile-img">
      <img class="profile-img" src="{{ asset(post.user.profile.profilePictureUrl) }}"
        alt="Profile picture of {{ post.user.profile.displayName }}">
    </a>

    <div class="flex items-start gap-xxs">
      <a href="{{ path('app_profile', {'username': post.user.profile.username}) }}"
        class="profile-link text-14 text-color-primary">
        {{ post.user.profile.displayName }}
      </a>

      {% if 'ROLE_ADMIN' in post.user.roles %}
      <div class="badge-container">
        {% include "_icons/admin-badge.html.twig" with {'class': 'badge-icon admin'} %}
        <span class="badge-tooltip text-12">Admin</span>
      </div>
      {% endif %}
    </div>
  </div>

  <p class="text-body-14 text-color-secondary">
    {{ post.description }}
  </p>

  {% if post.imagePath %}
  <img class="post-img" src="{{ asset('uploads/posts/' ~ post.imagePath) }}"
    alt="Post image by {{ post.user.profile.displayName }}">
  {% endif %}

