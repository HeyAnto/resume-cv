{% extends 'base.html.twig' %}

{% block title %}Profile Cooking â€” Resume.cv{% endblock %}

{% block main %}

{% include "_components/sidebar.html.twig" %}

{% include "/profile-edit/_components/edit-sidebar.html.twig" %}

<div class="main-content">
  {% include "_components/headers/header-logout.html.twig" %}

  <section class="section-profile-edit">
    <div class="container">

      <div>
        <h1 class="text-h1">Projects</h1>
        <p class="text-16 text-color-tertiary">Add or modify your projects</p>
      </div>

      <div class="flex flex-column gap-sm">
        <a href="{{ path('app_project_new', {'username': username}) }}" class="btn btn-primary-xs full">
          Add a project
        </a>

        {% if projects is not empty %}
        <form action="{{ path('app_project_toggle_visibility', {'username': username}) }}" method="post"
          style="display: inline;">
          <button type="submit" class="btn btn-secondary-xs full">
            {% if projectSection and projectSection.isVisible %}
            Hide Section
            {% else %}
            Show Section
            {% endif %}
          </button>
        </form>

        {% if projectSection %}
        <div class="flex gap-sm">
          <form action="{{ path('app_project_change_order', {'username': username}) }}" method="post"
            style="display: inline; width: 100%;">
            <input type="hidden" name="direction" value="up">
            <button type="submit" class="btn full btn-secondary-xs">
              Move Up
            </button>
          </form>
          <form action="{{ path('app_project_change_order', {'username': username}) }}" method="post"
            style="display: inline; width: 100%;">
            <input type="hidden" name="direction" value="down">
            <button type="submit" class="btn full btn-secondary-xs">
              Move Down
            </button>
          </form>
        </div>
        {% endif %}
        {% endif %}
      </div>

      {% if projects is not empty %}
      <div class="flex flex-column gap-sm">
        <p class="text-16 text-color-tertiary">Click to edit or remove a project</p>

        {% for project in projects %}
        {% include "/profile-edit/_components/project-edit-card.html.twig" with {'post': project, 'username': username}
        %}
        {% endfor %}
      </div>
      {% endif %}

      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
      {% endfor %}

      {% for message in app.flashes('error') %}
      <div class="alert alert-danger">
        {{ message }}
      </div>
      {% endfor %}

    </div>
  </section>
</div>

{% endblock %}