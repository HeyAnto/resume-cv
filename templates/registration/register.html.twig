{% extends 'base.html.twig' %}

{% block title %}Register — Resume.cv{% endblock %}

{% block main %}
{% include "_components/sidebar.html.twig" %}
<div class="main-content">
  {% include "_components/headers/header-connection.html.twig" %}

  <section class="section-connection">
    <div class="container">

      {{ form_start(registrationForm) }}

      <div>
        <h1 class="text-h1">Create your account</h1>
        <p class="text-16 text-color-tertiary">Join Resume.cv and showcase your work</p>
      </div>

      <div class="illustration">
        <img class="register-0" src="{{ asset('images/img-hannah-lee.webp') }}" alt="Creative Illustration">
        <p class="text-16 text-color-tertiary">Hannah Lee</p>
      </div>

      <div class="form-group">
        <label class="text-16 text-color-tertiary" for="{{ registrationForm.email.vars.id }}">Email</label>
        {{ form_widget(registrationForm.email) }}
        <div class="text-14 text-color-red">{{ form_errors(registrationForm.email) }}</div>
      </div>

      <div class="form-group">
        <label class="text-16 text-color-tertiary" for="{{ registrationForm.plainPassword.vars.id }}">Password</label>
        {{ form_widget(registrationForm.plainPassword) }}

        {% set hasPasswordErrors = registrationForm.plainPassword.vars.errors|length > 0 %}

        <div class="password-requirements">
          <div class="text-14 {{ hasPasswordErrors ? 'text-color-red' : 'text-color-tertiary' }}">
            • At least 12 characters
          </div>
          <div class="text-14 {{ hasPasswordErrors ? 'text-color-red' : 'text-color-tertiary' }}">
            • Mix of uppercase, lowercase, numbers and special characters
          </div>
        </div>

        {% if hasPasswordErrors %}
        <div class="text-14 text-color-red">{{ form_errors(registrationForm.plainPassword) }}</div>
        {% endif %}
      </div>

      <div class="form-group check">
        {{ form_widget(registrationForm.agreeTerms) }}
        <label class="text-16 text-color-tertiary" for="{{ registrationForm.agreeTerms.vars.id }}">I agree to the <a
            href="{{ path('terms') }}" class="link text-color-primary">terms and conditions</a></label>
        <div class="text-14 text-color-red">{{ form_errors(registrationForm.agreeTerms) }}</div>
      </div>

      <button type="submit" class="btn btn-primary-xs">Continue</button>
      {{ form_end(registrationForm) }}
    </div>
  </section>

  {% include "_components/footer.html.twig" %}
</div>

{% endblock %}